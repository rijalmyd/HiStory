<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_story_shimmer"
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:scaleType="centerCrop"
            android:background="@color/shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintTop_toTopOf="@id/tv_name_shimmer"
            app:layout_constraintStart_toStartOf="@id/tv_name_shimmer"
            app:layout_constraintEnd_toEndOf="@id/tv_name_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_shimmer"/>

        <TextView
            android:id="@+id/tv_name_shimmer"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/iv_story_shimmer"
            app:layout_constraintStart_toStartOf="@id/iv_story_shimmer"/>

        <View
            android:id="@+id/view1_shimmer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CDFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_story_shimmer"
            app:layout_constraintEnd_toEndOf="@id/iv_story_shimmer"
            app:layout_constraintTop_toTopOf="@id/tv_title_shimmer"/>

        <TextView
            android:id="@+id/tv_title_shimmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            app:layout_constraintBottom_toTopOf="@id/tv_date_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_date_shimmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="4dp"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>